# ── Postgres (used by docker-compose AND backend/admin services) ──
POSTGRES_USER=gs_user
POSTGRES_PASSWORD=gs_pass
POSTGRES_DB=gramsight_db
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Backend/admin_service read these vars for the DB connection
# Keep in sync with the POSTGRES_* vars above
DB_HOST=postgres
DB_PORT=5432
DB_NAME=gramsight_db
DB_USER=gs_user
DB_PASSWORD=gs_pass

# Assembled URL (used by alembic / direct SQLAlchemy if needed)
DATABASE_URL=postgresql+psycopg2://gs_user:gs_pass@postgres:5432/gramsight_db

# Redis
REDIS_URL=redis://redis:6379/0

# Auth
SECRET_KEY=change_me_to_a_random_hex_string
ACCESS_TOKEN_EXPIRE_MINUTES=60

# External APIs
OPENWEATHER_API_KEY=your_openweather_api_key
MARKET_API_KEY=your_market_api_key

# Admin UI API key for protected admin endpoints
ADMIN_API_KEY=change_me

# For local dev you may set USE_DOCKER_DB=true to assemble DATABASE_URL from POSTGRES_* vars
USE_DOCKER_DB=true

